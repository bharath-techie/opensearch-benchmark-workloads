{
  "settings": {
    "index.number_of_shards": {{ number_of_shards | default(1) }},
"index.number_of_replicas": {{ number_of_replicas | default(0) }},
"index.requests.cache.enable": false,
"index.composite_index": true,
"index.refresh_interval": "60s"
},
"mappings": {
"dynamic": "strict",
"_source": {
"enabled": {{ source_enabled | default(true) | tojson }}
},
"composite": {
"startree1": {
"type": "star_tree",
"config": {
"ordered_dimensions": [{
"name": "clientip"
},
{
        "name": "status"
}
],
"metrics": [
{
"name": "size",
"stats": [
"sum",
"value_count",
        "min","max"
]
},
{
"name": "status",
"stats": [
"sum",
"value_count",
"min","max"
]
}
]
}
}
},
"properties": {
"@timestamp": {
"format": "strict_date_optional_time||epoch_second",
"type": "date"
},
"message": {
"type": "keyword",
"index": false,
"doc_values": false
},
"clientip": {
"type": "keyword"
},
"request": {
"type": "text",
"fields": {
"raw": {
"ignore_above": 256,
"type": "keyword"
}
}
},
"status": {
"type": "float"
},
"size": {
"type": "float"
},
"geoip" : {
"properties" : {
"country_name": { "type": "keyword" },
"city_name": { "type": "keyword" },
"location" : { "type" : "geo_point" }
}
}
}
}
}
